{
  "name": "site-tour",
  "version": "1.0.0",
  "description": "Guide for users visits your site",
  "main": "dist/site-tour.cjs.js",
  "module": "dist/site-tour.es.js",
  "types": "dist/site-tour.d.ts",
  "style": "dist/site-tour.css",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/site-tour.d.ts",
      "import": "./dist/site-tour.es.js",
      "require": "./dist/site-tour.cjs.js"
    },
    "./dist/site-tour.css": {
      "require": "./dist/site-tour.css",
      "import": "./dist/site-tour.css",
      "default": "./dist/site-tour.css"
    }
  },
  "author": "Jay Gajjar (gajjarjay1711@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jay-gajjar/site-tour/issues"
  },
  "homepage": "https://github.com/jay-gajjar/site-tour#readme",
  "scripts": {
    "dev": "tsc && vite build --watch",
    "start": "vite --host",
    "build": "tsc && vite build",
    "lint:scripts": "eslint ./src --ext .ts",
    "format:scripts": "prettier ./src --write"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jay-gajjar/site-tour.git"
  },
  "keywords": [
    "site-tour",
    "tour",
    "guide",
    "walkthrough"
  ]
}
