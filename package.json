{
  "name": "site-tour",
  "version": "1.0.0",
  "description": "Guide for users visits your site",
  "main": "dist/site-tour.cjs.js",
  "module": "dist/site-tour.es.js",
  "types": "dist/site-tour.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/site-tour.es.js",
      "require": "./dist/site-tour.cjs.js"
    }
  },
  "author": "jay-gajjar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jay-gajjar/site-tour/issues"
  },
  "homepage": "https://github.com/jay-gajjar/site-tour#readme",
  "scripts": {
    "dev": "tsc && vite build --watch",
    "start": "vite --host",
    "build": "tsc && vite build",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "lint:scripts": "eslint ./src --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier ./src --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jay-gajjar/site-tour.git"
  },
  "keywords": [
    "site-tour",
    "tour",
    "guide",
    "walkthrough"
  ]
}
